<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AdminEventDet">

    <TextView
        android:id="@+id/event_det"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/event_booking"
        android:textColor="#29241E"
        android:background="@drawable/text_bg"
        android:textSize="39sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textStyle="bold|italic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/add_event"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn_addevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="15dp"
                android:text="@string/add_now"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/event_booking"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/add_now" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/view_event"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn_viewevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="15dp"
                android:text="@string/view_now"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/event_details"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/view_event" />
    </RelativeLayout>

</LinearLayout>